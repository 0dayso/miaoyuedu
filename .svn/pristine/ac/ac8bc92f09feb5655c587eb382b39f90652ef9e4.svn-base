<extend name="Common/base" />
<block name="header">
    <include file="Common/head2" />
</block>
<block name="body">

<div class="weixinbg">
    <if condition="$sex_flag eq 'nan'">
        <h2>关注<font color="#bf040a">宅男帮</font>微信公众号</h2>
        <img src="__IMG__/znb.jpg"/>
    <else/>
        <h2>关注<font color="#bf040a">红薯阅读</font>微信公众号</h2>
